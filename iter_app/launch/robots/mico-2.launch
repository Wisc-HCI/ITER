<!-- https://github.com/Kinovarobotics/kinova-ros/wiki/MoveIt -->
<!-- m1n6s200 -->

<launch>

  <arg name="simulated" default='true'/>
  <arg name="use_rik" default='true' />
  <arg name="use_rik_julia" default="false"/>
  <arg name="use_rik_static" default="false"/>

  <!-- If using Relaxed-IK -->
  <group if="$(eval arg('use_rik') == true)">
    <include file="$(find iter_app)/launch/robots/mico-2-rik.launch">
      <arg name="simulated" value="$(arg simulated)"/>
      <arg name="use_rik_julia" value="$(arg use_rik_julia)"/>
      <arg name="use_rik_static" value="$(arg use_rik_static)"/>
    </include>
  </group>

  <!-- Else, use moveit-->
  <group if="$(eval arg('use_rik') == false)">
    <include file="$(find iter_app)/launch/robots/mico-2-moveit.launch">
      <arg name="simulated" value="$(arg simulated)"/>
    </include>
  </group>

</launch>
